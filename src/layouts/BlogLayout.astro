---
import Layout from './Layout.astro';
import Header from '@/components/Header.astro';
import Nav from '@/components/Nav.astro';
import Sidebar from '@/components/Sidebar.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalUrl?: string;
  publishedTime?: string;
  type?: 'website' | 'article';
}

const props = Astro.props;
---

<Layout {...props}>
  <section class="relative mx-auto max-w-[var(--page-width)] px-4 pt-16 pb-8 sm:px-8">
    <Header />
    <main class="flex flex-col gap-6 lg:flex-row lg:gap-24">
      <div class="flex-1" transition:animate="fade">
        <Nav />
        <slot />
      </div>
      <aside class="w-full shrink-0 border-gray-100 lg:w-[320px] lg:border-l dark:border-gray-800" transition:persist>
        <div class="sticky top-20">
          <Sidebar />
        </div>
      </aside>
    </main>
  </section>
</Layout>
